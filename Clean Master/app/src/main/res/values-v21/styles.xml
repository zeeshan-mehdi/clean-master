<resources>

    <style name="TextLarge" parent="@android:style/TextAppearance.Material.Large" />

    <style name="TextMedium" parent="@android:style/TextAppearance.Material.Medium" />

    <style name="TextSmall" parent="@android:style/TextAppearance.Material.Small" />

    <style name="TextTitle" parent="@android:style/TextAppearance.Material.Title" />

    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_style</item>
        <item name="android:indeterminateDrawable">@drawable/horizontal_progressbar</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    <style name="Theme.AppTheme.TranslucentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>